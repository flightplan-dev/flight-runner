{
  "name": "flight-runner",
  "version": "0.0.1",
  "private": true,
  "description": "Agent runner for Flightplan missions - runs inside sandboxes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "flight-runner": "dist/index.js",
    "flightplan-setup": "dist/setup/index.js",
    "flightplan-wait": "dist/setup/wait.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "setup": "node dist/setup/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.43.0",
    "@sinclair/typebox": "^0.34.47",
    "yaml": "^2.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
}
